<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad_inverse"
    tools:context=".profile">


    <TextView
        android:id="@+id/lbl_biodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Biodata"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_matric2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="282dp"
        android:layout_height="122dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:srcCompat="@drawable/profile_icon" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        app:cardCornerRadius="8dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_name2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Kolej Ungku Omar"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="@+id/tv_name3"
        app:layout_constraintStart_toStartOf="@+id/tv_name3"
        app:layout_constraintTop_toBottomOf="@+id/tv_name3" />

    <TextView
        android:id="@+id/tv_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/tv_matric2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A123456"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="@+id/tv_name2"
        app:layout_constraintStart_toStartOf="@+id/tv_name2"
        app:layout_constraintTop_toBottomOf="@+id/tv_name2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#F5F3FF"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_biodata">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="President"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_jawatan2"
                app:layout_constraintStart_toStartOf="@+id/tv_club"
                app:layout_constraintTop_toTopOf="@+id/tv_jawatan2" />

            <TextView
                android:id="@+id/tv_jawatan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_jawatan"
                app:layout_constraintTop_toBottomOf="@+id/tv_jawatan" />

            <TextView
                android:id="@+id/tv_blok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:text="Name"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toTopOf="@+id/tv_fakulti"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_fakulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toTopOf="@+id/tv_jantina"
                app:layout_constraintStart_toStartOf="@+id/tv_blok"
                app:layout_constraintTop_toBottomOf="@+id/tv_blok" />

            <TextView
                android:id="@+id/tv_jantina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toTopOf="@+id/tv_agama"
                app:layout_constraintStart_toStartOf="@+id/tv_fakulti"
                app:layout_constraintTop_toBottomOf="@+id/tv_fakulti" />

            <TextView
                android:id="@+id/tv_agama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toTopOf="@+id/tv_kelab"
                app:layout_constraintStart_toStartOf="@+id/tv_jantina"
                app:layout_constraintTop_toBottomOf="@+id/tv_jantina" />

            <TextView
                android:id="@+id/tv_jawatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toTopOf="@+id/tv_jawatan2"
                app:layout_constraintStart_toStartOf="@+id/tv_kelab"
                app:layout_constraintTop_toBottomOf="@+id/tv_kelab" />

            <TextView
                android:id="@+id/tv_kelab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room No"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toTopOf="@+id/tv_jawatan"
                app:layout_constraintStart_toStartOf="@+id/tv_agama"
                app:layout_constraintTop_toBottomOf="@+id/tv_agama" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_blok"
                app:layout_constraintStart_toStartOf="@+id/tv_email"
                app:layout_constraintTop_toTopOf="@+id/tv_blok" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="0123456789"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_jantina"
                app:layout_constraintStart_toEndOf="@+id/tv_jantina"
                app:layout_constraintTop_toTopOf="@+id/tv_jantina"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FTSM"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_agama"
                app:layout_constraintStart_toStartOf="@+id/tv_phone"
                app:layout_constraintTop_toTopOf="@+id/tv_agama" />

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A101"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_kelab"
                app:layout_constraintStart_toStartOf="@+id/tv_faculty"
                app:layout_constraintTop_toTopOf="@+id/tv_kelab"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iqra"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_jawatan"
                app:layout_constraintStart_toStartOf="@+id/tv_room"
                app:layout_constraintTop_toTopOf="@+id/tv_jawatan"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a123456@siswa.ukm.edu.my"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintBottom_toBottomOf="@+id/tv_fakulti"
                app:layout_constraintStart_toStartOf="@+id/tv_phone"
                app:layout_constraintTop_toTopOf="@+id/tv_fakulti" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2A1C3F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/colorText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2" />

</androidx.constraintlayout.widget.ConstraintLayout>